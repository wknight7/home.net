#!/bin/bash

NTFY_SERVER="{{ ntfy_server }}"
NTFY_USER="{{ ntfy_username }}"
NTFY_PASS="{{ ntfy_password }}"
HOSTNAME="{{ ansible_hostname }}"
TOPIC="system-$HOSTNAME"

ISSUES=()
PRIORITY="1"

DISK_USAGE=$(df -h / | awk 'NR==2 {print $5}' | sed 's/%//')
if [ "$DISK_USAGE" -gt 85 ]; then
    ISSUES+=("üî¥ DISK: $DISK_USAGE% full - cleanup needed")
    PRIORITY="4"
fi

MEM_USAGE=$(free | awk '/^Mem:/ {printf "%.1f", $3/$2 * 100.0}')
if (( $(echo "$MEM_USAGE > 90.0" | awk '{print ($1 > 90.0)}') )); then
    ISSUES+=("üü° MEMORY: $MEM_USAGE% - high load detected")
    [ "$PRIORITY" -lt "4" ] && PRIORITY="4"
fi

FAILED_SERVICES=$(systemctl --failed --no-legend | wc -l)
if [ "$FAILED_SERVICES" -gt 0 ]; then
    FAILED_LIST=$(systemctl --failed --no-legend | awk '{print $1}' | tr '\n' ' ' | sed 's/ $//')
    ISSUES+=("üî¥ SERVICES: $FAILED_SERVICES failed - $FAILED_LIST")
    PRIORITY="5"
fi

LOAD_AVG=$(uptime | awk -F'load average:' '{print $2}' | awk '{print $1}' | sed 's/,//' | xargs)
CPU_COUNT=$(nproc)
if [ ! -z "$LOAD_AVG" ] && [ ! -z "$CPU_COUNT" ]; then
    LOAD_THRESHOLD=$(echo "$CPU_COUNT * 2" | bc -l 2>/dev/null || echo "4")
    LOAD_CHECK=$(echo "$LOAD_AVG > $LOAD_THRESHOLD" | bc -l 2>/dev/null || echo "0")
    if [ "$LOAD_CHECK" = "1" ]; then
        ISSUES+=("üü° LOAD: $LOAD_AVG ($CPU_COUNT cores) - high system load")
        [ "$PRIORITY" -lt "4" ] && PRIORITY="4"
    fi
fi

if command -v apt &> /dev/null; then
    apt update -qq 2>/dev/null
    SECURITY_UPDATES=$(apt list --upgradable 2>/dev/null | grep -c "ubuntu.*-security" || echo "0")
    if [ "$SECURITY_UPDATES" -gt 0 ]; then
        ISSUES+=("üü° SECURITY: $SECURITY_UPDATES updates available")
        [ "$PRIORITY" -lt "3" ] && PRIORITY="3"
    fi
fi

# Always send status report (consolidated notification)
if [ ${{ '{#ISSUES[@]}' }} -gt 0 ]; then
    MESSAGE="Host: $HOSTNAME
Time: $(date)
Uptime: $(uptime -p)

Issues detected:
$(printf '%s\n' "${{ '{ISSUES[@]}' }}")

System Status:
‚Ä¢ Disk Usage: $DISK_USAGE%
‚Ä¢ Memory Usage: $MEM_USAGE%
‚Ä¢ Load Average: $LOAD_AVG
‚Ä¢ Failed Services: $FAILED_SERVICES"

    case "$PRIORITY" in
        "5") TITLE="üö® [$HOSTNAME] CRITICAL System Issues" ;;
        "4") TITLE="‚ö†Ô∏è  [$HOSTNAME] System Warnings" ;;
        "3") TITLE="‚ÑπÔ∏è  [$HOSTNAME] System Updates" ;;
        *) TITLE="‚úÖ [$HOSTNAME] System Notice" ;;
    esac
else
    MESSAGE="Host: $HOSTNAME
Time: $(date)
Uptime: $(uptime -p)

üìä System Status:
‚Ä¢ Disk Usage: $DISK_USAGE%
‚Ä¢ Memory Usage: $MEM_USAGE%
‚Ä¢ Load Average: $LOAD_AVG
‚Ä¢ Failed Services: $FAILED_SERVICES

‚úÖ All systems operating normally"

    TITLE="‚úÖ [$HOSTNAME] Bi-weekly Health Report"
    PRIORITY="1"
fi

curl -s \
    -u "$NTFY_USER:$NTFY_PASS" \
    -d "$MESSAGE" \
    -H "Title: $TITLE" \
    -H "Priority: $PRIORITY" \
    -H "Tags: health,$HOSTNAME" \
    "$NTFY_SERVER/$TOPIC"
