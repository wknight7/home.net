#!/bin/bash

# Cron notification wrapper
# Usage: cron-notify "job description" command [args...]

NTFY_SERVER="{{ ntfy_server }}"
NTFY_USER="{{ ntfy_username }}"
NTFY_PASS="{{ ntfy_password }}"
HOSTNAME="{{ ansible_hostname }}"
TOPIC="system-${HOSTNAME}"

JOB_DESC="$1"
shift

# Run the command and capture output
OUTPUT=$("$@" 2>&1)
EXIT_CODE=$?

# Only notify on failures or if there's output
if [ $EXIT_CODE -ne 0 ] || [ -n "$OUTPUT" ]; then
    if [ $EXIT_CODE -ne 0 ]; then
        PRIORITY="4"  # high
        TITLE="üö® [${HOSTNAME}] Cron Job Failed: $JOB_DESC"
        MESSAGE="Host: ${HOSTNAME}
Time: $(date)
Job: $JOB_DESC
Command: $*
Exit Code: $EXIT_CODE

Output:
$OUTPUT"
    else
        PRIORITY="2"  # low
        TITLE="‚ÑπÔ∏è  [${HOSTNAME}] Cron Job Output: $JOB_DESC"
        MESSAGE="Host: ${HOSTNAME}
Time: $(date)
Job: $JOB_DESC
Command: $*

Output:
$OUTPUT"
    fi
    
    curl -s \
        -u "$NTFY_USER:$NTFY_PASS" \
        -d "$MESSAGE" \
        -H "Title: $TITLE" \
        -H "Priority: $PRIORITY" \
        -H "Tags: cron,${HOSTNAME}" \
        "$NTFY_SERVER/$TOPIC"
fi

exit $EXIT_CODE
